<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.RuyaTabirU" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Uygulama temel renkleri -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <!-- Özel yazı tipi -->
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="fontFamily">@font/poppins_regular</item> <!-- Material bileşenler için -->

        <!-- Arka plan ve metin -->
        <item name="android:background">@color/backgroundLight</item>
        <item name="android:textColor">@color/textDark</item>

        <!-- Varsayılan buton teması -->
        <item name="buttonStyle">@style/MyButtonStyle</item>

    </style>

    <!-- Özel Buton Stili -->
    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:padding">12dp</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
