<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginHorizontal="8dp"
    android:elevation="4dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="12dp">

        <!-- Rüya metni -->
        <TextView
            android:id="@+id/txtRuya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rüya metni"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <!-- Yorum metni -->
        <TextView
            android:id="@+id/txtYorum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yorum metni"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Butonlar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="6dp">

            <!-- Favori butonu (ImageView olarak değiştirildi) -->
            <ImageView
                android:id="@+id/btnFavori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_kalp_bos"
                android:contentDescription="Favorilere ekle"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true" />

            <!-- Paylaş butonu (ImageButton olarak kaldı) -->
            <ImageButton
                android:id="@+id/btnPaylas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_share"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Paylaş"
                android:tint="@android:color/darker_gray"
                android:padding="8dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
