<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">

    <!-- Başlık -->
    <TextView
        android:id="@+id/altKategoriBaslik"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Rüyada Aslan Görmek"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <!-- Kalp Butonu -->
    <ImageView
        android:id="@+id/favoriKalp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_kalp_bos"
        android:contentDescription="Favori Kalp" />

    <!-- Paylaş Butonu -->
    <ImageButton
        android:id="@+id/btnPaylas"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_share"
        android:background="@android:color/transparent"
        android:contentDescription="Paylaş"
        android:padding="4dp"
        android:tint="@android:color/darker_gray" />
</LinearLayout>
